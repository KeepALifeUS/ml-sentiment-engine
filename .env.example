# ML Sentiment Engine Configuration

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=ml_user
DB_PASSWORD=your_secure_password
DB_DATABASE=ml_sentiment
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_ID=sentiment-engine
KAFKA_AUTO_OFFSET_RESET=latest

# API Configuration
API_HOST=0.0.0.0
API_PORT=8003
API_WORKERS=4
API_RELOAD=true
API_DEBUG=true
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=60
API_CORS_ORIGINS=*

# ML Model Configuration
ML_MODELS_DIR=./models
ML_CACHE_DIR=./cache
ML_FINBERT_MODEL=ProsusAI/finbert
ML_FINBERT_MAX_LENGTH=512
ML_BATCH_SIZE=32
ML_NUM_WORKERS=4
ML_USE_GPU=false
ML_ENSEMBLE_WEIGHTS={"finbert": 0.4, "vader": 0.2, "textblob": 0.2, "crypto_specific": 0.2}

# Twitter/X API Configuration
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ML-SentimentEngine/1.0

# Telegram API Configuration
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_PHONE=your_telegram_phone

# Discord API Configuration
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CHANNELS=channel1,channel2,channel3

# Monitoring Configuration
METRICS_PORT=8004
METRICS_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACING_ENABLED=false
ALERT_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Processing Configuration
PROCESSING_BATCH_SIZE=100
PROCESSING_INTERVAL=60
MAX_CONCURRENT_TASKS=10

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_EXPECTED_EXCEPTION=Exception

# Service Configuration
SERVICE_NAME=ml-sentiment-engine
SERVICE_VERSION=1.0.0